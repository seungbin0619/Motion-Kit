.track-root {
    background-color: #2D2D2D;
}

.track-container {
    margin: 2px 2px;
    flex-direction: row;
    justify-content: flex-start;
    background-color: rgba(60, 60, 60, 0.6);
    border-radius: 4px;
    overflow: hidden;

    min-height: 22px;
}

.track-target-container {
    min-width: 60px;
    width: 120px;
    height: 100%;

    border-radius: 4px 0 0 4px;
    justify-content: center;
    background-color: #4D4D4D;
    overflow: hidden;
}

.track-root:hover .track-container {
    background-color: rgba(59, 66, 82, 1);
    transition: background-color 0.1s;
}
.track-root:hover .track-target-container {
    background-color: rgba(74, 95, 138, 1);
    transition: background-color 0.1s;
}

.unity-collection-view__item--selected .track-container {
    background-color: rgba(57, 61, 71, 1);
}

.unity-collection-view__item--selected .track-target-container {
    background-color: rgba(75, 91, 124, 1);
}

.track-tag {
    position: absolute;
    left: 0;
    top: 0;
    width: 4px;
    height: 100%;
}

.track-target-field {
    margin-left: 8px;
    margin-right: 8px;
}

.track-timeline-container {
    overflow: hidden;
    flex-grow: 1;
    height: 100%;
}

.track-timeline-content {
    height: 100%;
    opacity: 0.8;
    background-color: #4D4D4D;
    border-radius: 2px;
    border-color: rgba(255, 255, 255, 0.8);
    align-items: center;
    justify-content: center;

    overflow: hidden;
}

.track-timeline-label {
    color: #FFFFFF;
    font-size: 9px;
    margin: 0 4px;
    margin-bottom: 3px;
    overflow: hidden;
}

.track-timeline-tag {
    position: absolute;

    height: 3px;
    width: 100%;
    bottom: 0px;
}

.track-timeline-resize-handle {
    position: absolute;
    width: 50%;
    max-width: 4px;
    height: 100%;

    cursor: split-resize-left-right;
}

.unity-collection-view__item--selected .track-timeline-content {
    border-width: 1px;
    transition: border-width 0.1s;
}