.track-container {
    margin: 2px 2px;
    flex-direction: column;
    justify-content: center;
    background-color: #3C3C3C;
    border-radius: 4px;

    min-height: 36px;
}

.track-target-container {
    width: 140px;
    height: 100%;

    border-radius: 4px 0 0 4px;
    justify-content: center;
    background-color: #4C4C4C;
}

.track-target-field {
    width: 120px;
    margin-left: 4px;
}

.track-timeline-container {
    flex-grow: 1;
    
}